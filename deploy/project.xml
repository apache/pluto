<?xml version="1.0" encoding="UTF-8"?>

<project>
  <extend>${basedir}/../project.xml</extend>
  <pomVersion>3</pomVersion>
  <name>Pluto Portlet Deployment</name>
  <id>deploy</id>
  <groupId>pluto</groupId>
  <currentVersion>1.0</currentVersion>

  <organization>
    <logo>/../../images/jakarta-logo-blue.gif</logo>
  </organization>
  <logo>/../../images/pluto-feather.gif</logo>

  <package>org.apache.pluto</package>
  <gumpRepositoryId>jakarta</gumpRepositoryId>
  <shortDescription>Deployment of portlets</shortDescription>

  <description>
    Deployment of portlets
  </description>

  <dependencies>
  	<dependency>
      <id>castor</id>
      <version>0.9.5</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>

    <dependency>
      <id>commons-logging</id>
      <version>1.0.2</version>
    </dependency>

    <dependency>
      <id>commons-cli</id>
      <version>1.0</version>
    </dependency>
	
    <dependency>
      <id>regexp</id>
      <version>1.3-dev</version>
    </dependency>

    <dependency>
      <id>pluto</id>
      <version>1.0</version>
      <properties>
        <war.bundle>false</war.bundle>
      </properties>
    </dependency>

    <dependency>
      <id>pluto-portal</id>
      <groupId>pluto</groupId>
      <version>1.0</version>
      <properties>
        <war.bundle>false</war.bundle>
      </properties>
    </dependency>
    
    <dependency>
      <id>portlet-api</id>
      <groupId>portlet-api</groupId>
      <version>1.0</version>
      <properties>
        <war.bundle>false</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <id>servletapi</id>
      <version>2.3</version>
      <properties>
        <war.bundle>false</war.bundle>
      </properties>
    </dependency>
    
    <dependency>
      <id>xerces</id>
      <version>2.3.0</version>
      <properties>
        <war.bundle>false</war.bundle>
      </properties>
    </dependency>

    <dependency>      
      <id>xml-apis</id>
      <version>2.0.2</version>
      <properties>
        <war.bundle>false</war.bundle>
      </properties>
    </dependency>
    

  </dependencies>

  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <nagEmailAddress>pluto-dev@jakarta.apache.org</nagEmailAddress>

    <sourceDirectory>src/java</sourceDirectory>
    <aspectSourceDirectory/>

  </build>

</project>
