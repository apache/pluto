<?xml version="1.0" encoding="UTF-8"?>

<project>
  <extend>${basedir}/../project.xml</extend>
  <pomVersion>3</pomVersion>
  <name>Pluto Portlet Deployment</name>
  <id>deploy</id>
  <groupId>pluto</groupId>
  <currentVersion>1.0</currentVersion>

  <package>org.apache.pluto</package>
  <gumpRepositoryId>jakarta</gumpRepositoryId>
  <shortDescription>Deployment of portlets</shortDescription>

  <description>
    Deployment of portlets
  </description>

  <dependencies>
  	  <dependency>
      <id>castor</id>
      <version>0.9.5</version>
      <properties>
        <war.bundle.jar>true</war.bundle.jar>
      </properties>
    </dependency>
  	
    <dependency>
      <id>regexp</id>
      <version>1.3-dev</version>
    </dependency>
    <dependency>
      <id>pluto</id>
      <version>1.0</version>
      <properties>
        <war.bundle.jar>false</war.bundle.jar>
      </properties>
    </dependency>
    <dependency>
      <id>pluto-portal</id>
      <groupId>pluto</groupId>
      <version>1.0</version>
      <properties>
        <war.bundle.jar>false</war.bundle.jar>
      </properties>
    </dependency>
    
    <dependency>
      <!--
      	- portlet-api.jar must be located in your Maven repository under portlet-api/jars 
      	- This usually $USER_HOME/.maven/repository 
      	-->
      <id>portlet-api</id>
      <groupId>portlet-api</groupId>
      <version>1.0</version>
      <properties>
        <war.bundle.jar>false</war.bundle.jar>
      </properties>
    </dependency>
    <dependency>
      <id>servletapi</id>
      <version>2.3</version>
      <properties>
        <war.bundle.jar>false</war.bundle.jar>
      </properties>
    </dependency>
    
    <dependency>
      <id>xerces</id>
      <version>2.3.0</version>
      <properties>
        <war.bundle.jar>false</war.bundle.jar>
      </properties>
    </dependency>
    <dependency>      
      <id>xml-apis</id>
      <version>2.0.2</version>
      <properties>
        <war.bundle.jar>false</war.bundle.jar>
      </properties>
    </dependency>
    

  </dependencies>

  <build>

    <nagEmailAddress>pluto-dev@jakarta.apache.org</nagEmailAddress>

    <sourceDirectory>src/java</sourceDirectory>
    <aspectSourceDirectory/>

  </build>

</project>
