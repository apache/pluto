<!--
    Maven 2 assembly describing a distribution which packages up all of the Pluto 
    code modules, including the source code and Maven 2 POMs.  The result
    is an assembly that users can download and build with Maven.
-->
<assembly>
    
    <id>src</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    
    <componentDescriptors>
        <componentDescriptor>assembly/src/main/assembly/license-and-notice-component.xml</componentDescriptor>
    </componentDescriptors>
    
    <moduleSets>
        <moduleSet>
            <includes>
                <include>org.apache.pluto:*</include>
            </includes>
            <sources>
                <fileSets>
                    <fileSet>
                        <useDefaultExcludes>true</useDefaultExcludes>
                        <includes>
                            <include>pom.xml</include>
                            <include>src/**</include>
                        </includes>
                        <useStrictFiltering>true</useStrictFiltering>
                    </fileSet>
                </fileSets>                            
            </sources>
        </moduleSet>
    </moduleSets>
    
    <fileSets>
        <fileSet>
            <directory/>
            <useStrictFiltering>true</useStrictFiltering>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>
    </fileSets>        
    
</assembly>