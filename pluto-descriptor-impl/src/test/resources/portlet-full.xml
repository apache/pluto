<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
    version="1.0">

    <portlet>
        <description>AboutPortletDescription</description>
        <portlet-name>AboutPortlet</portlet-name>
        <display-name>About Portlet</display-name>
        <display-name xml:lang="fr">About Portlet</display-name>
        <portlet-class>org.apache.pluto.driver.portlets.AboutPortlet</portlet-class>
        <init-param>
            <description>a</description>
            <name>b</name>
            <value>v</value>
        </init-param>
        <expiration-cache>30</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
            <portlet-mode>EDIT</portlet-mode>
            <portlet-mode>HELP</portlet-mode>
        </supports>
        <supported-locale>en</supported-locale>
        <portlet-info>
            <title>About Apache Pluto</title>
        </portlet-info>
        <portlet-preferences>
            <preference>
                <name>noValues</name>
            </preference>
            <preference>
                <name>oneEmptyValue</name>
                <value></value>
            </preference>
            <preference>
                <name>oneValue</name>
                <value>value1</value>
            </preference>
            <preference>
                <name>fourValues</name>
                <value>value1</value>
                <value></value>
                <value>value3</value>
                <value/>
            </preference>
        </portlet-preferences>
    </portlet>
    <custom-portlet-mode>
        <description>Test</description>
        <portlet-mode>customMode</portlet-mode>
    </custom-portlet-mode>
    <custom-portlet-mode>
        <description>Test2</description>
        <portlet-mode>customMode2</portlet-mode>
    </custom-portlet-mode>
    <custom-window-state>
        <description>Test</description>
        <window-state>customWindow</window-state>
    </custom-window-state>
    <custom-window-state>
        <description>Test2</description>
        <window-state>customWindow2</window-state>
    </custom-window-state>
    <user-attribute>
        <description>Test2</description>
        <name>user</name>
    </user-attribute>
    <security-constraint>
        <display-name>description</display-name>
        <portlet-collection>
            <portlet-name>a</portlet-name>
            <portlet-name>b</portlet-name>
            <portlet-name>c</portlet-name>
        </portlet-collection>
        <user-data-constraint>
            <description>scdescription</description>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
</portlet-app>