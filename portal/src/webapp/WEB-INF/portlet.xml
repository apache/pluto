<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd" version="1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">

	<portlet>
        <description>Portlet to deploy portlet applications</description>
		<portlet-name>deploywar</portlet-name>
		<display-name>Deploy War Portlet</display-name>
		<portlet-class>org.apache.pluto.portlet.admin.controller.DeployWarPortlet</portlet-class>
        <init-param>
            <name>view_include</name>
            <value>/portlets/admin/DeployWarView.jsp</value>
        </init-param>
        <init-param>
            <name>help_include</name>
            <value>/portlets/admin/DeployWarHelp.html</value>
        </init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
            <portlet-mode>help</portlet-mode>
		</supports>
		<portlet-info>
			<title>Deploy War Admin Portlet</title>
			<short-title>Deploy War Portlet</short-title>
			<keywords>Deploy War</keywords>
		</portlet-info>
	</portlet>
	<portlet>
		<portlet-name>portletentityregistry</portlet-name>
		<portlet-class>org.apache.pluto.portlet.admin.controller.PortletEntityRegistryPortlet</portlet-class>
        <init-param>
            <name>view_include</name>
            <value>/portlets/admin/PortletEntityRegistryView.jsp</value>
        </init-param>
        <init-param>
            <name>edit_include</name>
            <value>/portlets/admin/PortletEntityRegistryEdit.jsp</value>
        </init-param>
        <init-param>
            <name>help_include</name>
            <value>/portlets/admin/PortletEntityRegistryHelp.html</value>
        </init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
            <portlet-mode>help</portlet-mode>
		</supports>
		<portlet-info>
			<title>Portlet Entity Registry Admin Portlet</title>
			<short-title>Portlet Entity Registry Portlet</short-title>
			<keywords>Portlet,Entity,Registry</keywords>
		</portlet-info>
	</portlet>
	<portlet>
		<portlet-name>pageregistry</portlet-name>
		<portlet-class>org.apache.pluto.portlet.admin.controller.PageRegistryPortlet</portlet-class>
        <init-param>
            <name>view_include</name>
            <value>/portlets/admin/PageRegistryView.jsp</value>
        </init-param>
        <init-param>
            <name>edit_include</name>
            <value>/portlets/admin/PageRegistryEdit.jsp</value>
