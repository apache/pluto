<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>

  <form-beans>
  <!--
    <form-bean name="inputForm" type="app.InputForm"/>
	<form-bean name="logonForm" 
			   type="org.apache.struts.action.DynaActionForm">
      <form-property name="username" type="java.lang.String"/>
      <form-property name="password" type="java.lang.String"/>
  -->
  </form-beans>

  <global-exceptions>
    <!--
    <exception key="container.error"
               type="org.apache.pluto.PlutoException"
			   path="/error.jsp"/>
    -->
  </global-exceptions>

  <global-forwards>
    <forward name="portal" path="/portal.do"/>
    <forward name="failure" path="/error.jsp"/>
  </global-forwards>

  <action-mappings>

    <!-- ==================================== -->
    <!-- ========== Global Actions ========== -->
    <!-- ======== Explicitly Called ========= -->
    <!-- ==================================== -->
    <action path="/portal"
           type="org.apache.pluto.driver.actions.PortalPreProcessingAction">
      <forward name="success" path="/render.do"/>
    </action>

    <action path="/doPortletAction"
            type="org.apache.pluto.driver.actions.PortalPreProcessingAction">
      <forward name="success" path="/action.do"/>
    </action>

    <!-- ==================================== -->
    <!-- ========= Internal Actions ========= -->
    <!-- ======== Internally Called ========= -->
    <!-- ==================================== -->
    <action path="/render"
            type="org.apache.pluto.driver.actions.RenderAction">
      <forward name="success" path="/portal.jsp"/>
    </action>

    <action path="/action"
            type="org.apache.pluto.driver.actions.PortletActionAction">
      <forward name="render" path="/render.do"/> <!-- redirect="true"/ -->
    </action>
  </action-mappings>


  <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>

  <message-resources parameter="kuiper-driver"/>

  <plug-in className="org.apache.struts.tiles.TilesPlugin" >
    <set-property property="definitions-config"
	                 value="/WEB-INF/tiles-defs.xml" />
    <set-property property="moduleAware" value="true" />
    <set-property property="definitions-parser-validate" value="true" />
  </plug-in>

  <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
    <set-property
        property="pathnames"
        value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"/>
  </plug-in>

</struts-config>

