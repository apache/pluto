<pluto-driver>
  
  <page-manager>
    <page id="test">
      <display-name>Test Page</display-name>
      <portlet-window>
        <portlet-context>kuiper-testsuite</portlet-context>
        <portlet-name>TestPortlet1</portlet-name>
        <preferences>
          <preference-name>TestName4</preference-name>
          <preference-value>TestValue4</preference-value>
        </preferences>
      </portlet-window>
      <portlet-window>
        <portlet-context>kuiper-testsuite</portlet-context>
        <portlet-name>TestPortlet2</portlet-name>
        <preferences>
          <preference-name>TestName4</preference-name>
          <preference-value>TestValue4</preference-value>
        </preferences>
      </portlet-window>
    </page>

    <!--
      ** We can/do support another page here, however
      ** since we're currently relying on the testsuite
      ** that's a part of 1.0.1 and it only defines two
      ** portlets, the portlets on the second page would
      ** essentially duplicate the ones that allready exist.
      ** for testing we should probably add another page.
    <page id="another">
      <display-name>Another Test Page</display-name>
      <portlet-window>
        <portlet-context>kuiper-testsuite</portlet-context>
        <portlet-name>TestPortlet3</portlet-name>
      </portlet-window>
      <portlet-window>
        <portlet-context>kuiper-testsuite</portlet-context>
        <portlet-name>TestPortlet4</portlet-name>
      </portlet-window>
    </page>
    -->
  </page-manager>

</pluto-driver>
