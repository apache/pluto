<project default="multiproject:artifact"
         xmlns:j="jelly:core"
         xmlns:maven="jelly:maven"
         xmlns:ant="jelly:ant">

  <goal name="plugins">
	<maven:reactor
        basedir="${basedir}"
		includes="maven-plugins/tomcat/project.xml"
		goals="plugin:install"
		banner="Installing Tomcat Plugin"
		postProcessing="true"
		ignoreFailures="false"/>
  </goal>

  <goal name="kuiper">
    <maven:reactor
            basedir="${basedir}"
			includes="kuiper/project.xml"
			goals="jar:jar,jar:install"
            banner="Building Container Jar"
            postProcessing="false"
            ignoreFailures="false"/>  	
    <maven:reactor
            basedir="${basedir}"
			includes="kuiper-driver/project.xml"
			goals="tomcat:deploy"
            banner="Deploying Kuiper Portal to Tomcat\n"
            postProcessing="false"
            ignoreFailures="false"/>  	
	<maven:reactor
			basedir="${basedir}"
			includes="kuiper-testsuite/project.xml"
			goals="tomcat:deploy"
			banner="Deploying Kuiper Test Suite\n"
			postProcessing="false"
			ignoreFailures="false"/>
  </goal>
</project>

