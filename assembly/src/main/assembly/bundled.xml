<!--
    Maven 2 assembly describing a distribution which contains a working installation of Pluto
    with Tomcat.  Includes site documentation.
    
    By the time this assembly descriptor is used, the 'assembly/target/pluto-tomcat' directory
    will contain Tomcat that has been configured for Pluto, and Pluto will have been installed.
-->
<assembly>

    <id>bundle</id>

    <formats>
        <format>tar.gz</format>
        <format>tar.bz2</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>

    <componentDescriptors>
        <componentDescriptor>assembly/src/main/assembly/license-and-notice-component.xml</componentDescriptor>
        <componentDescriptor>assembly/src/main/assembly/site-documentation-component.xml</componentDescriptor>
    </componentDescriptors>
    
    <fileSets>
        <!--
            Include the bundled Tomcat, which already has Pluto installed and
            configured.
        -->
        <fileSet>
            <directory>assembly/target/pluto-tomcat</directory>
            <outputDirectory>/</outputDirectory>
            <useStrictFiltering>true</useStrictFiltering>
            <includes>
                <include>*</include>
                <include>**/*</include>
            </includes>
           <excludes>
                <exclude>bin/*.sh</exclude>
           </excludes>
        </fileSet>

        <fileSet>
            <directory>assembly/target/pluto-tomcat</directory>
            <outputDirectory>/</outputDirectory>
            <useStrictFiltering>true</useStrictFiltering>
            <includes>
                <include>bin/*.sh</include>
            </includes>
           <fileMode>0755</fileMode>
        </fileSet>

    </fileSets>

</assembly>

