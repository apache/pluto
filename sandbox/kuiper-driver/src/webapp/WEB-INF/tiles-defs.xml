<?xml version="1.0" encoding="ISO-8859-1" ?>

 <!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 1.1//EN"
       "http://jakarta.apache.org/struts/dtds/tiles-config_1_1.dtd">

<tiles-definitions>
	<!-- ========================== -->
	<!-- The Main Definition ====== -->
	<!-- ========================== -->
	<definition name="main" path="/WEB-INF/tiles/main-template.jsp">

    <!-- Default Fragment Tiles  -->
		<put name="tile-header" value="/WEB-INF/tiles/main-header.jsp"/>
		<put name="tile-footer" value="/WEB-INF/tiles/main-footer.jsp"/>
    <put name="tile-navigation" value="/WEB-INF/tiles/main-navigation.jsp"/>
		<put name="tile-subnavigation" value="/WEB-INF/tiles/placeholder.jsp"/>

		<!-- Now Default Definitions -->
		<put name="tile-layout" type="definition" value="one-column-layout"/>


		<put name="page-title" value=""/>
		<put name="page-content" value="/tiles/placeholder.jsp"/>
	</definition>

	<definition name="secure" path="/tiles/secure-template.jsp" extends="main">
		<put name="tile-navigation" value="/tiles/includes/secure_nav.jsp"/>
	</definition>

	<!-- ============================= -->
	<!-- The Different Layouts Defined -->
	<!-- ============================= -->
	<definition
    name="one-column-layout"
    path="/WEB-INF/tiles/layout_one_column.jsp">
	</definition>

	<definition
    name="two-column-layout"
    path="/WEB-INF/tiles/layout_two_column.jsp"
		extends="one-column-layout">

	</definition>

  <definition
    name="portlet-skin"
    path="/WEB-INF/tiles/main-portlet-skin.jsp">
    
  </definition>

</tiles-definitions>
