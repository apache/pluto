        <init-param>
            <name>help_include</name>
            <value>/portlets/admin/PageRegistryHelp.html</value>
        </init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
            <portlet-mode>help</portlet-mode>
		</supports>
		<portlet-info>
			<title>Page Registry Admin Portlet</title>
			<short-title>Page Registry Portlet</short-title>
			<keywords>Page,Registry</keywords>
		</portlet-info>
	</portlet>
</portlet-app>