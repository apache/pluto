<!--
    Maven 2 assembly describing a distribution which contains Pluto binary artifacts (with no
    external dependencies) - including the Pluto Portal and Testsuite, and site documentation.
-->
<assembly>

    <id>bin</id>

    <formats>
        <format>tar.gz</format>
        <format>tar.bz2</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    
    <componentDescriptors>
        <componentDescriptor>assembly/src/main/assembly/license-and-notice-component.xml</componentDescriptor>
        <componentDescriptor>assembly/src/main/assembly/site-documentation-component.xml</componentDescriptor>
    </componentDescriptors>
    
    <moduleSets>        
        
        <moduleSet>
            <includes>
                <include>org.apache.pluto:pluto-descriptor-api:*</include>
                <include>org.apache.pluto:pluto-descriptor-impl:*</include>
                <include>org.apache.pluto:pluto-container:*</include>
                <include>org.apache.pluto:pluto-taglib:*</include>
            </includes>
            <binaries>
                <outputDirectory>/lib</outputDirectory>
                <includeDependencies>false</includeDependencies>
                <unpack>false</unpack>
                <useStrictFiltering>true</useStrictFiltering>
            </binaries>
        </moduleSet>
                
        <!-- Pluto Portal and testsuite webapps (no dependencies) -->
        <moduleSet>
            <includes>
                <include>org.apache.pluto:pluto-portal:*</include>
                <include>org.apache.pluto:pluto-testsuite:*</include>
            </includes>
            <binaries>
                <outputDirectory>/webapps</outputDirectory>
                <includeDependencies>false</includeDependencies>
                <unpack>false</unpack>
                <useStrictFiltering>true</useStrictFiltering>
            </binaries>                
        </moduleSet>
        
        <!-- Pluto ant tasks, maven plugin, assembler (utils) -->
        <moduleSet>
            <includes>
                <include>org.apache.pluto:pluto-util:*</include>
                <include>org.apache.pluto:maven-pluto-plugin:*</include>
                <include>org.apache.pluto:pluto-ant-tasks:*</include>
            </includes>
            <binaries>
                <outputDirectory>/util</outputDirectory>
                <includeDependencies>false</includeDependencies>
                <unpack>false</unpack>
                <useStrictFiltering>true</useStrictFiltering>
            </binaries>                
        </moduleSet>
           
    </moduleSets>        

</assembly>

